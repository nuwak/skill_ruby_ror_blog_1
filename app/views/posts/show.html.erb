<h1><%= @post.title %></h1>
<p><%= @post.body %></p>

<hr>
<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %>
<%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Delete this post?'}, class: 'btn btn-danger' %>
<hr>
<h3>Comments</h3>
<% @post.comment.each do |comment| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= comment.username %></h5>
      <p class="card-text"><%= comment.body %></p>
    </div>
  </div>
<% end %>
<hr>
<h4>Add Comment</h4>
<%= form_for([@post, @post.comment.build]) do |f| %>
  <p>
    User <br>
    <%= f.text_field(:username, {class: 'form-control'}) %>
  </p>
  <p>
    Text <br>
    <%= f.text_area(:body, {class: 'form-control'}) %>
  </p>
  <p>
    <%= f.submit('Add', {class: 'btn btn-warning'}) %>
  </p>
<% end %>
